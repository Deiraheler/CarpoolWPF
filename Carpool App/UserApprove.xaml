<Window x:Class="Carpool_App.UserApprove"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carpool_App"
        xmlns:userControls="clr-namespace:Carpool_App.UserControls"
        mc:Ignorable="d"
        Title="UserApprove" Width="400" Height="200">
    <Grid>
        <StackPanel Loaded="FrameworkElement_OnLoaded" Margin="20">
            <TextBlock FontSize="20" Margin="0 0 0 10">
                <Run>Name:</Run>
                <Run x:Name="UserNameField"/>
            </TextBlock>
            <TextBlock FontSize="20">
                User rating:
            </TextBlock>
            <userControls:StarRatingControl x:Name="RatingControl" RatingValue="0" Margin="0 0 0 20"></userControls:StarRatingControl>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Approve" Background="Chartreuse" Width="100" Height="30" Margin="0 0 10 0" Click="Button_Click"/>
                <Button Content="Reject" Background="Red" Width="100" Height="30" Click="Button_Click_1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
